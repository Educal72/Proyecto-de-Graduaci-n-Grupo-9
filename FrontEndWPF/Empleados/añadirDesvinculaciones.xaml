<Window x:Class="FrontEndWPF.añadirDesvinculaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEndWPF"
        mc:Ignorable="d"
        Title="añadirDesvinculaciones" Height="674" Width="655">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="DarkBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0,10,0,9">



        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,564,0,0" Width="220">
            <Button Content="Guardar" Click="Guardar_Click" Margin="5" Width="100"/>
            <Button Content="Cancelar" Click="Cancelar_Click" Margin="5" Width="100
                    "/>
        </StackPanel>
        <Label Content="Nueva Desvinculación:" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="48" FontWeight="Bold"/>
        <Label Content="Empleado:" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="24"/>
        <Label Content="Ingrese los datos para la solicitud de desvinculación." HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="16" Foreground="#FF5D5D5D"/>

        <TextBox x:Name="EmpleadoTextBox" HorizontalAlignment="Left" Margin="142,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="423" FontSize="24" FontFamily="Roboto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Label Content="Fecha inicio:" HorizontalAlignment="Left" Margin="11,138,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="24"/>
        <DatePicker x:Name="FechaInicioPicker" HorizontalAlignment="Left" Margin="156,144,0,0" VerticalAlignment="Top" Width="433" Height="30" VerticalContentAlignment="Center"/>
        <Label Content="Motivo:" HorizontalAlignment="Left" Margin="10,186,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="24"/>
        <TextBox x:Name="MotivoTextbox" HorizontalAlignment="Left" Margin="110,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="423" FontSize="24" FontFamily="Roboto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Comentarios:" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="24"/>
        <TextBox x:Name="ComentariosTextbox" HorizontalAlignment="Left" Margin="168,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="423" FontSize="24" FontFamily="Roboto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Fecha salida:" HorizontalAlignment="Left" Margin="11,286,0,0" VerticalAlignment="Top" FontFamily="Roboto" FontSize="24"/>
        <DatePicker x:Name="FechaSalidaPicker" HorizontalAlignment="Left" Margin="156,288,0,0" VerticalAlignment="Top" Width="433" Height="30" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
