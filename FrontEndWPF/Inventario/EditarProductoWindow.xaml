<Window x:Class="FrontEndWPF.EditarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Producto" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Código:" />
            <TextBox x:Name="CodigoTextBox" />

            <Label Content="Nombre:" />
            <TextBox x:Name="NombreTextBox" />

            <Label Content="Categoria:" />
            <TextBox x:Name="CategoriaTextBox" />

            <Label Content="Precio:" />
            <TextBox x:Name="PrecioTextBox" />

            <Label Content="Activo:" />
            <CheckBox x:Name="ActivoCheckBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="AceptarButton" Content="Aceptar" Width="75" Margin="0,0,10,0" />
                <Button x:Name="CancelarButton" Content="Cancelar" Width="75" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
