        <ComboBox HorizontalAlignment="Left" Margin="42,908,0,0" VerticalAlignment="Top" Width="600" Height="50" RenderTransformOrigin="0.513,0.14" Background="White" Foreground="Black" FontFamily="Roboto" FontSize="24" VerticalContentAlignment="Center" BorderBrush="White">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Cajero"/>
            <ComboBoxItem Content="Salonero"/>
